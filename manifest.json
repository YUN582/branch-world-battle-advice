{
  "manifest_version": 3,
  "name": "가지세계 도우미",
  "version": "1.2.0",
  "description": "코코포리아 GM 보조 확장 프로그램 - 근접전 합 처리 자동화",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "가지세계 도우미"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ccfolia.com/*"
      ],
      "js": [
        "content/site-volume.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://ccfolia.com/rooms/*",
        "https://*.ccfolia.com/rooms/*"
      ],
      "js": [
        "content/room-save.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://ccfolia.com/*",
        "https://*.ccfolia.com/*"
      ],
      "js": [
        "content/home-display.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://ccfolia.com/*"
      ],
      "js": [
        "content/config-defaults.js",
        "content/melee-engine.js",
        "content/combat-engine.js",
        "content/chat-interface.js",
        "content/overlay.js",
        "content/auto-complete.js",
        "content/char-shortcut.js",
        "content/log-export-dialog.js",
        "content/grid-overlay.js",
        "content/combat-move.js",
        "content/room-copy.js",
        "content/content.js"
      ],
      "css": [
        "content/overlay.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sounds/*", "content/site-volume-page.js", "content/redux-injector.js"],
      "matches": ["https://ccfolia.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
